"UnlitGeneric"
{
	$basetexture	"neon\kanji_blindness_neon_purple"
	$translucent 1
	$additive 1
	//$color	"[0.85 0.05 0.85]"
	
	"$sineoffset"	0.0
	"$sineoutput"	0.0

	Proxies
	{
		//generate noise for our sine wave
		GaussianNoise	
		{
			mean 0.85
			minVal 0.80
			maxVal 0.90 //controls sine speed
			resultVar "$sineoffset"
		}
		
		//generate a sine wave with a period based on the noise
		Sine
		{
			sineperiod "$sineoffset"
			sinemin -1
			sinemax 2 //lower this to make it flicker more
			resultVar "$sineoutput"
		}

		//clamp the sine wave values and make this our new alpha for this material
		Clamp
		{
			min 0.0
			max 0.7
			srcVar1 "$sineoutput"
			resultVar "$alpha"
		}
	}
}