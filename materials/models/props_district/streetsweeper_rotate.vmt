"VertexlitGeneric"
{
	"$basetexture"  "models/props_district/streetsweeper_rotate"
	"$bumpmap" 		"models/props_district/streetsweeper_rotate_nrm"
	"$normalmapalphaenvmapmask" 1	
	
	"$surfaceprop" "metal"	

	"$model" 1
	//"$alphatest" 1
	//"$translucent" 1
	//"$nocull" 1
	
	//"$envmap" "env_cubemap"
	//"$envmapcontrast" 1
	//"$phongexponenttexture" "models/props_district/streetsweeper_exp"
	"$phong" 1
	"$phongboost"	"1"	
	"$phongexponent" 0	
	"$phongalbedotint" "1"
	"$phongfresnelranges"	"[1 1 3]"
    "$angle" 0.0
    "$translate" "[0 0]"
    "$center" "[.50 0.50]"
	"$scale" "[1 1]"

    "Proxies"
    {
        "LinearRamp"
        {
            "rate" -200
            "initialValue" 0.0
            "resultVar" "$angle"
        }

        "TextureTransform"
        {
            "translateVar" "$translate" // we don't need this, but it's not optional
            "rotateVar" "$angle"
            "centerVar" "$center"
			"scaleVar" "$scale"
            "resultVar" "$basetexturetransform"
        }
    } 
}
