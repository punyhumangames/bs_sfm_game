"UnlitGeneric"
{
	"$basetexture" "VGUI/selected_outline_sword"
	"$vertexcolor" 1
	"$additive" 1
	"$no_fullbright" 1
	"$ignorez" 1

	Proxies
	{
		//generate a sine wave with a period based on the noise
		Sine
		{
			sineperiod 0.5
			sinemin 0.1
			sinemax 1 //lower this to make it flicker more
			resultVar "$alpha"
		}
	}
}
